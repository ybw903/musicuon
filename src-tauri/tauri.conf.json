{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "musicuon",
  "version": "0.1.0",
  "identifier": "com.ybw903.musicuon",
  "build": {
    "frontendDist": "../apps/tauri-app/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "musicuon",
        "width": 360,
        "height": 444,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost asset: http://asset.localhost; img-src 'self' blob: data: asset: http://asset.localhost; media-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:musicuon.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
